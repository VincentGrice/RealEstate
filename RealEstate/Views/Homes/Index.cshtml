@model IEnumerable<RealEstate.Models.Homes>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Index</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table table-striped border table-responsive">
        <thead>
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(model => model.HouseImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HouseImageUrl1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HouseImageUrl2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HouseImageUrl3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HouseImageUrl4)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HouseImageUrl5)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HouseImageUrl6)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EstMortgage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bedrooms)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bathrooms)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearBuilt)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.HouseImageUrl"/>
                    </td>
                    <td>
                        <img src="@item.HouseImageUrl1"/>
                    </td>
                    <td>
                        <img src="@item.HouseImageUrl2" />
                    </td>
                    <td>
                        <img src="@item.HouseImageUrl3" />
                    </td>
                    <td>
                        <img src="@item.HouseImageUrl4" />
                    </td>
                    <td>
                        <img src="@item.HouseImageUrl5" />
                    </td>
                    <td>
                        <img src="@item.HouseImageUrl6" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstMortgage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bedrooms)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bathrooms)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearBuilt)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
